fun interactive(p :: Pict, callback :: Function.of_arity(1)) :~ Pict:
  Pict.from_handle(rkt.interactive(p.snapshot().handle, callback))

fun is_printing():
  rkt.#{printing?}
  
fun is_condensing():
  rkt.#{condense?}
  
fun start_at_recent():
  rkt.#{start-at-recent-slide}()

fun retract_recent():
  rkt.#{retract-most-recent-slide}()
